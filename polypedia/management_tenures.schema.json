{
  "$id": "management_tenures.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Management Tenures",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "management_tenure_item": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "status": { "type": "string" },
        "person": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ppid": {
              "type": [ "string", "null" ]
            },
            "id_map": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "north_data_id": {
                  "type": [ "string", "null" ]
                }
              }
            },
            "first_name": {
              "type": "string"
            },
            "middle_name": {
              "type": [ "string", "null" ]
            },
            "last_name": {
              "type": "string"
            }
          }
        },
        "title_i18n": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "en": {
              "type": [ "string", "null" ]
            },
            "de": {
              "type": [ "string", "null" ]
            }
          }
        },
        "role_i18n": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "en": {
              "type": [ "string", "null" ]
            },
            "de": {
              "type": [ "string", "null" ]
            }
          }
        },
        "start": { "$ref": "definitions.schema.json#/date" },
        "end": { "$ref": "definitions.schema.json#/date" },
        "research_info": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "notes": { "type": [ "string", "null" ] },
            "research_sources" : { "$ref": "definitions.schema.json#/research_sources" }
          }
        },
        "editorial_content": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tags": { "type": ["array", "null"] },
            "editorials" : {
              "type": ["array", "null"],
              "items": { "$ref": "definitions.schema.json#/editorial" },
              "default": []
            }
          }
        }
      }
    }
  },
  "properties": {
    "management_tenures": {
      "type": "array",
      "items": { "$ref": "#/definitions/management_tenure_item" }
    }
  }
}