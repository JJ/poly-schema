{
  "$id": "financial_data.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "financial_data_item": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "date": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "currency": { "type": "string"},
        "amount": { "type": "number"},
        "research_info"
      }
    }
  },
  "title": "Entity",
  "type": "object",
  "additionalProperties": false,
  "required": ["financial_data"],
  "properties": {
    "financial_data": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "status": { "type": "string" },
          "type": { "type": "string" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/definitions/financial_data_item" }
          }
        }
      }
    }
  }
}