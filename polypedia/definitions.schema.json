{
  "$id": "definitions.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "research_source": {
    "title": "Research Source",
    "description": "Source of this data.",
    "type": "object",
    "additionalProperties": false,
    "required": ["dataset"],
    "properties": {
      "dataset": {
        "description": "Dataset where this source was found.",
        "type": "string"
      },
      "url": {
        "description": "URL of the source..",
        "type": ["string", "null"]
      },
      "archive_url": {
        "description": "Archive.org URL of the source.",
        "type":  ["string", "null"]
      },
      "notes": {
        "description": "Research notes URL of the source.",
        "type": ["string", "null"]
      }
    }
  },
  "research_sources": {
    "type": ["array", "null"],
    "items": { "$ref": "#/research_source" },
    "default": []
  },
  "date": {
    "type": "string",
    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
  },
  "timespan_value": {
    "type": "object",
    "additionalProperties": false,
    "required": ["value","start_date","end_date"],
    "properties": {
      "value": {
        "type": "string"
      },
      "start_date": { "$ref": "#/date" },
      "end_date": { "$ref": "#/date" }
    }
  },
  "timespan_values": {
    "type": "array",
    "items": { "$ref": "#/timespan_value" },
    "default": []
  },
  "address": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "street": {
        "type": ["string", "null"]
      },
      "city": {
        "type": ["string", "null"]
      },
      "postal_code": {
        "type": ["string", "number", "null"]
      },
      "country": {
        "type": ["string", "null"]
      },
      "latitude": {
        "type": ["string", "number", "null"]
      },
      "longitude": {
        "type": ["string", "number", "null"]
      }
    }
  },
  "editorial": {
    "type": "object",
    "additionalProperties": false,
    "required": [ "title_i18n", "body_i18n" ],
    "properties": {
      "author": { "type": "string" },
      "date": { "$ref": "#/date" },
      "title_i18n": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "en": {
            "type": "string"
          },
          "de": {
            "type": "string"
          }
        }
      },
      "body_i18n": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "en": {
            "type": "string"
          },
          "de": {
            "type": "string"
          }
        }
      },
      "tags": {
        "type": "array"
      },
      "research_sources": { "$ref": "#/research_sources" }
    }
  }
}